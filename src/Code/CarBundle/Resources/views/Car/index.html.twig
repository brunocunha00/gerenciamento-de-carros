{% extends "::base.html.twig" %}

{% block title %}CodeCarBundle:Car:index{% endblock %}

{% block body %}
    <h1>Fabricantes</h1>
    <ul>
        {% for fabricante in fabricantes %}
            <li>{{ fabricante.nome }}</li>
            <ul>
                {% for carro in fabricante.carros %}
                    <li>{{ carro.modelo }} - {{ carro.ano }} - {{ carro.cor }}</li>
                {% endfor %}
            </ul>

        {% endfor %}
    </ul>
    <h1>Carros</h1>
    <table>
        <thead>
            <tr>
                <td>Modelo</td>
                <td>Fabricante</td>
                <td>Ano</td>
                <td>Cor</td>
            </tr>
        </thead>
        <tbody>
            {% for carro in carros %}
                <tr>
                    <td>{{ carro.modelo }}</td>
                    <td>{{ carro.fabricante.nome }}</td>
                    <td>{{ carro.ano }}</td>
                    <td>{{ carro.cor }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
